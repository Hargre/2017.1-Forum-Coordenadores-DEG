<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ForumDEG.Views.CoordinatorMasterPage"
             NavigationPage.HasNavigationBar="True"
             Title="Início">
    <ScrollView>
        <StackLayout Padding="20">
            <Label
                Text="{Binding SelectedForum.Title}"/>
            <Label
                Text="{Binding SelectedForum.Date, StringFormat='Data {0:dd/MM/yyyy}'}"
                HorizontalOptions="Start" 
                VerticalOptions="CenterAndExpand"/>
            <Label 
                Text="{Binding SelectedForum.Date, StringFormat='Horário {0:HH:mm}'}" 
                HorizontalOptions="Start" 
                VerticalOptions="CenterAndExpand"/>
            <Button
                Text="Ver Detalhes"
                HorizontalOptions="End"
                VerticalOptions="CenterAndExpand"
                Clicked="seeDetailsButtonClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
    